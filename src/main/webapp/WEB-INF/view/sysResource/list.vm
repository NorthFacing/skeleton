<!DOCTYPE html>
<html lang="zh-CN">
<head>
    #parse("/WEB-INF/view/layout/base.vm")
    #parse("/WEB-INF/view/layout/header.vm")
  <title>资源管理</title>
</head>
<body>
<div class="container-fluid">
    #parse("/WEB-INF/view/layout/navbar.vm")
  <div class="row">
    <div class="col-md-2">
        #parse("/WEB-INF/view/layout/menu.vm")
    </div>
    <div class="col-md-10">
      <div class="row">
        <ol class="breadcrumb">
          <li><i class="glyphicon glyphicon-home"></i></li>
          <li><a href="$!{path}/admin/login">首页</a></li>
          <li><a href="#">资源管理</a></li>
        </ol>
      </div>
      <div class="row">
        <form class="form-inline">
          <div class="form-group">
            <label for="status">医院等级</label>
            <select class="form-control" id="type">
              <option value="">全部</option>
              <option value="1">省级医院</option>
              <option value="2">市级医院</option>
            </select>
          </div>
          <div class="form-group">
            <label for="name">医院名称</label>
            <input type="text" class="form-control" placeholder="医院名称" id="name">
          </div>
          <a class="btn btn-info" href="#" role="button" id="search-btn">
            <i class="glyphicon glyphicon-search"></i>
            查询
          </a>
          <a class="btn btn-info" href="$!{path}/admin/sysResource/add" role="button" id="add-btn">
            <i class="glyphicon glyphicon-ok"></i>
            新增
          </a>
        </form>
      </div>

      <table id="grid-data" class="table table-condensed table-hover table-striped">
        <thead>
        <tr>
          <th data-column-id="id" data-type="numeric">ID</th>
          <th data-column-id="name">name</th>
          <th data-column-id="description" data-order="desc">description</th>
          <th data-column-id="resUrl" data-formatter="resUrl" data-sortable="false">resUrl</th>
        </tr>
        </thead>
      </table>

    </div>
  </div>
</div>
</div>

    #parse("/WEB-INF/view/layout/bottom.vm")

<script src="$!{path}/resources/sysResource/list.js?staticVersion=$!{staticVersion}" type="text/javascript"></script>

</body>
</html>
