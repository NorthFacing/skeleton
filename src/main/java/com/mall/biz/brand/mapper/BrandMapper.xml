<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.biz.brand.mapper.BrandMapper">
	<resultMap id="BaseResultMap" type="com.mall.biz.brand.model.Brand">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="code" property="code" />
		<result column="description" property="description" />
		<result column="is_delete" property="isDelete" />
		<result column="create_time" property="createTime" />
		<result column="create_user" property="createUser" />
		<result column="update_time" property="updateTime" />
		<result column="update_user" property="updateUser" />
	</resultMap>

	<sql id="tabaleName">brand</sql>

	<sql id="baseColumn">
		id,
		name,
		code,
		description,
		is_delete,
		create_time,
		create_user,
		update_time,
		update_user
	</sql>

	<select id="select" parameterType="com.mall.biz.brand.model.BrandVo"
		resultMap="BaseResultMap">
		select
		<include refid="baseColumn"></include>
		from
		<include refid="tabaleName"></include>
		<where>
			<if test=" name!=null and name!='' ">
				and name like '%${name}%'
			</if>
			<if test=" code!=null and code!='' ">
				and code like '%${code}%'
			</if>
			<if test=" description!=null and description!='' ">
				and description like '%${description}%'
			</if>
			<choose>
				<when test=" isDelete!=null and isDelete!='' ">
					and is_delete = #{isDelete}
				</when>
				<otherwise>
					and (is_delete is NULL or is_delete = 0 )
				</otherwise>
			</choose>
		</where>
		<if test=" sidx!=null and sidx!='' ">
			order by #{sidx}
		</if>
		<if test=" sord!=null and sord!='' ">
			#{sord}
		</if>
	</select>

</mapper>